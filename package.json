{
  "name": "spfetcherbase",
  "version": "1.0.85",
  "description": "A container for all requests in a Sharepoint webpart",
  "author": "Marius Brataas",
  "license": "MIT",
  "repository": "github:mariusbrataas/spfetcherbase",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "commonjs",
  "scripts": {
    "format": "prettier --write './src/*.ts'",
    "build": "rm -rf dist && tsc",
    "bump": "npm version patch",
    "prepublishOnly": "npm run bump && npm run build"
  },
  "devDependencies": {
    "@microsoft/sp-component-base": "^1.11.0",
    "@pnp/sp": "^2.0.11",
    "prettier": "^2.0.4",
    "typescript": "^3.8.3"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "jsxBracketSameLine": false,
    "printWidth": 80,
    "proseWrap": "preserve",
    "requirePragma": false,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false,
    "vueIndentScriptAndStyle": true,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "printWidth": 200
        }
      }
    ]
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@microsoft/sp-http": "^1.11.0"
  }
}
